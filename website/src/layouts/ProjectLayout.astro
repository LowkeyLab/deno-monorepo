---
import Layout from "./Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";

interface Props {
  title: string;
  description: string;
  projectData: {
    title: string;
    description: string;
    tags: string[];
    links: {
      github?: string;
      demo?: string;
      website?: string;
    };
  };
  activeItem?: "home" | "projects" | "contact";
}

const {
  title,
  description,
  projectData,
  activeItem = "projects",
} = Astro.props;
---

<Layout title={title} description={description} activeItem={activeItem}>
  <!-- Use ProjectCard in detail view mode for the header -->
  <ProjectCard
    title={projectData.title}
    description={projectData.description}
    tags={projectData.tags}
    links={projectData.links}
    isDetailView={true}
    showBackButton={true}
  />

  <!-- Project Content -->
  <div class="prose prose-lg max-w-none bg-base-100 p-8 rounded-lg shadow-md">
    <slot />
  </div>
</Layout>
